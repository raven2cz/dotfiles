#!/usr/bin/env python3

import psutil
import sys
import os

probes = ["amdgpu"]

def getgputempamd(zone):
    cpu = psutil.sensors_temperatures()
    #print(cpu)
    try:
        temp = int(cpu[zone][0].current)
    except KeyError as ex:
        return None
    return temp

def getgputempnvidia():
    try:
        temp = os.popen("nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader,nounits").read()
    except KeyError as ex:
        return None
    return temp

def main():
    for zone in probes:
        temp = getgputempamd(zone)
        if temp:
            print(str(temp) + "°C")
            return(0)
        else:
            temp = getgputempnvidia()
            if temp:
                print(str(temp).strip() + "°C")
                return(0)
    return(1)

if __name__ == '__main__':
    sys.exit(main())

