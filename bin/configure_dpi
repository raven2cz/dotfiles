#!/bin/bash

dp1_connected=$(xrandr --listactivemonitors | grep ' DP-1')
hdmi1_connected=$(xrandr --listactivemonitors | grep ' HDMI-1')

if [[ $dp1_connected != "" ]] ; then
    DPI=120
elif [[ $hdmi1_connected != "" ]] ; then
    DPI=120
else
    DPI=100 
fi
    
export DPI 

sed -i "/Xft.dpi/c\\Xft.dpi: $DPI" $HOME/.Xresources
